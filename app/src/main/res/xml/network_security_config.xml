<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Разрешаем cleartext трафик для локальных хостов -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Локальный хост -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Для эмулятора Android -->
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    
    <!-- Для всех остальных подключений (включая IP адреса) разрешаем cleartext трафик -->
    <!-- Это необходимо для подключения к MCP серверу по локальному IP (например, 192.168.1.90) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

